{
  "compilerOptions": {
    "target": "ES6",
    "module": "Commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
